<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="62dp"
            android:text="@string/app_name"
            android:textColor="?attr/YP_White"
            android:textSize="26sp" />

    </FrameLayout>

    <Button
        android:id="@+id/search"
        style="@style/MainScreenButton"
        android:text="@string/search_button"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/media_library"
        style="@style/MainScreenButton"
        android:text="@string/media_library"
        app:icon="@drawable/media_library_icon" />

    <Button
        android:id="@+id/settings"
        style="@style/MainScreenButton"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon" />

</LinearLayout>
