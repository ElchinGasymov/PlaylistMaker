<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.ui.activity.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/settings"
        app:titleTextColor="?attr/colorSecondary" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/appThemeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:paddingVertical="@dimen/_12dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingEnd="@dimen/_4dp"
        android:text="@string/dark_theme"
        android:textSize="@dimen/_16sp"
        app:thumbTint="?attr/colorSurfaceVariant"
        app:trackTint="?attr/colorSurface" />

    <TextView
        android:id="@+id/shareAppBtn"
        style="@style/SettingsScreenLine"
        android:text="@string/share_app"
        app:drawableRightCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/writeToSupportBtn"
        style="@style/SettingsScreenLine"
        android:text="@string/support"
        app:drawableRightCompat="@drawable/ic_support" />

    <TextView
        android:id="@+id/termsOfUseBtn"
        style="@style/SettingsScreenLine"
        android:text="@string/terms_of_use"
        app:drawableRightCompat="@drawable/ic_arrow_right" />

</LinearLayout>
